<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Task</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1>Edit Task</h1>
            <%tasks.forEach(function(task){ %>
                <form action="/update/<%=task.id%>" method="post">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" name="title" value="<%= task.title%>">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" class="form-control" name="description" value="<%= task.description%>"/><br>
                    </div>
                    <div class="form-group">
                        <label>Label</label>
                        <input type="text" class="form-control" name="label" value="<%= task.label%>"/><br>
                    </div>
                    <div class="form-group">
                        <label>Due Date</label>
                        <% var formattedDueDate = task.dueDate.toISOString().split('T')[0]; %>
                        <input type="date" class="form-control" name="dueDate" value="<%= formattedDueDate %>">

                    </div>
                    <div class="form-group">
                        <label>Task Priority</label> <br>
                        <select id="priority" name="priority" class="form-control">
                            <label>Task Priority</label>
                            <option value="low" <%= (task.priority === 'low') ? 'selected' : '' %>>Low</option>
                            <option value="medium" <%= (task.priority === 'medium') ? 'selected' : '' %>>Medium</option>
                            <option value="high" <%= (task.priority === 'high') ? 'selected' : '' %>>High</option>
                        </select><br>
                    </div>
                    
                    <div class="form-group">
                        <label>Task Status</label> <br>
                        <select id="status" name="status" class="form-control">
                            <option value="incomplete" <%= (task.status === 'incomplete') ? 'selected' : '' %>>Incomplete</option>
                            <option value="complete" <%= (task.status === 'complete') ? 'selected' : '' %>>Complete</option>
                            <option value="pending" <%= (task.status === 'pending') ? 'selected' : '' %>>pending</option>
                        </select><br>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-md">Update</button>
                </form>
                <% })%>
                    <hr>
        </div>
    </div>
</body>

</html>